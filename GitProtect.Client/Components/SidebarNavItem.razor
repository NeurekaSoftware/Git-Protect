<NavLink href="@Href"
         class="@CssClass"
         ActiveClass="is-active"
         Match="@Match">
    <i class="nav-icon @IconClass" aria-hidden="true"></i>
    <span class="nav-label">@Label</span>
</NavLink>

@code {
    [Parameter] public string Href { get; set; } = "#";
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public string IconClass { get; set; } = string.Empty;
    [Parameter] public bool IsSubItem { get; set; }
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;

    private string CssClass => IsSubItem ? "sidebar-nav-item is-sub" : "sidebar-nav-item";
}
