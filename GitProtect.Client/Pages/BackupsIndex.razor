@page "/backups"
@rendermode InteractiveWebAssembly

<PageTitle>Backups</PageTitle>

<MudStack Spacing="3">
    <MudPaper Elevation="1" Class="pa-4">
        <MudText Typo="Typo.h4">Backups</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">Choose a provider and manage repository-level backup execution.</MudText>
    </MudPaper>

    <MudGrid Spacing="2">
        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4">
                <MudStack Spacing="2">
                    <MudStack Spacing="0">
                        <MudText Typo="Typo.h6">GitHub</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Cloud-hosted repositories and organizations.</MudText>
                    </MudStack>
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Primary"
                               StartIcon="@Icons.Material.Filled.NorthEast"
                               OnClick='() => Nav.NavigateTo("/backups/github")'>
                        Open GitHub
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4">
                <MudStack Spacing="2">
                    <MudStack Spacing="0">
                        <MudText Typo="Typo.h6">GitLab</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Groups and projects on GitLab instances.</MudText>
                    </MudStack>
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Primary"
                               StartIcon="@Icons.Material.Filled.NorthEast"
                               OnClick='() => Nav.NavigateTo("/backups/gitlab")'>
                        Open GitLab
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" md="4">
            <MudPaper Elevation="1" Class="pa-4">
                <MudStack Spacing="2">
                    <MudStack Spacing="0">
                        <MudText Typo="Typo.h6">Forgejo</MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">Self-hosted Forgejo repositories.</MudText>
                    </MudStack>
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Primary"
                               StartIcon="@Icons.Material.Filled.NorthEast"
                               OnClick='() => Nav.NavigateTo("/backups/forgejo")'>
                        Open Forgejo
                    </MudButton>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudStack>

@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;
}
