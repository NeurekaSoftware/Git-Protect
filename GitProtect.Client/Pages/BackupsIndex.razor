@page "/backups"
@rendermode InteractiveWebAssembly

<PageTitle>Backups</PageTitle>

<Card>
    <CardHeader>
        <CardTitle>Choose Provider</CardTitle>
        <CardDescription>Select a provider to configure backups and monitor status.</CardDescription>
    </CardHeader>
    <CardContent>
        <Button Variant="ButtonVariant.Outline" @onclick='() => Nav.NavigateTo("/backups/github")'>GitHub</Button>
        <Button Variant="ButtonVariant.Outline" @onclick='() => Nav.NavigateTo("/backups/gitlab")'>GitLab</Button>
        <Button Variant="ButtonVariant.Outline" @onclick='() => Nav.NavigateTo("/backups/forgejo")'>Forgejo</Button>
    </CardContent>
</Card>

@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;
}
