@page "/storage"
@rendermode InteractiveWebAssembly
@inject ApiClient Api

<PageTitle>Storage</PageTitle>

<MudStack Spacing="3">
    <MudPaper Elevation="1" Class="pa-4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Spacing="2">
            <MudStack Spacing="0">
                <MudText Typo="Typo.h4">Storage Overview</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">S3 capacity, usage, and retention management.</MudText>
            </MudStack>

            <MudStack Row="true" Spacing="1">
                @if (retentionPolicy?.IsEnabled == true)
                {
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Warning"
                               StartIcon="@Icons.Material.Filled.DeleteSweep"
                               OnClick="PruneAsync"
                               Disabled="@isPruneBusy">
                        Prune
                    </MudButton>
                }
                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.Refresh"
                           OnClick="LoadAsync"
                           Disabled="@isLoading">
                    Refresh
                </MudButton>
            </MudStack>
        </MudStack>
    </MudPaper>

    @if (!string.IsNullOrWhiteSpace(pruneError))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Outlined">@pruneError</MudAlert>
    }
    else if (!string.IsNullOrWhiteSpace(pruneMessage))
    {
        <MudAlert Severity="Severity.Success" Variant="Variant.Outlined">@pruneMessage</MudAlert>
    }

    @if (isLoading)
    {
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">Loading storage...</MudAlert>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Outlined">@error</MudAlert>
    }
    else if (storage?.Config is null)
    {
        <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">Storage is not configured. Go to Settings.</MudAlert>
    }
    else
    {
        var config = storage.Config;

        <MudGrid Spacing="2">
            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-4">
                    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">Bucket</MudText>
                    <MudText Typo="Typo.h6">@config.Bucket</MudText>
                    <MudText Typo="Typo.body2">@config.Region</MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-4">
                    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">Used Space</MudText>
                    <MudText Typo="Typo.h4">@FormatBytes(storage.TotalBytes)</MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudPaper Elevation="1" Class="pa-4">
                    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">Last Verification</MudText>
                    <MudText Typo="Typo.h6">@(config.VerifiedAt?.ToLocalTime().ToString("g") ?? "Never")</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
    }
</MudStack>

@code {
    private StorageDetailsDto? storage;
    private RetentionPolicyDto? retentionPolicy;
    private bool isLoading = true;
    private bool isPruneBusy;
    private string? error;
    private string? pruneMessage;
    private string? pruneError;

    protected override async Task OnInitializedAsync() => await LoadAsync();

    private async Task LoadAsync()
    {
        error = null;
        pruneError = null;
        isLoading = true;
        try
        {
            storage = await Api.GetStorageAsync();
            retentionPolicy = await Api.GetRetentionPolicyAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task PruneAsync()
    {
        pruneMessage = null;
        pruneError = null;
        isPruneBusy = true;
        try
        {
            var result = await Api.PruneRetentionAsync();
            if (result.Success && result.Data is not null)
            {
                var localCutoff = result.Data.CutoffUtc.ToLocalTime();
                pruneMessage = $"Pruned {result.Data.DeletedCount} backup object(s) older than {localCutoff:g}.";
                await LoadAsync();
            }
            else
            {
                pruneError = result.Error ?? "Retention prune failed.";
            }
        }
        catch (Exception ex)
        {
            pruneError = ex.Message;
        }
        finally
        {
            isPruneBusy = false;
        }
    }

    private static string FormatBytes(long bytes)
    {
        double size = bytes;
        string[] units = ["B", "KB", "MB", "GB", "TB"];
        var unitIndex = 0;
        while (size >= 1024 && unitIndex < units.Length - 1)
        {
            size /= 1024;
            unitIndex++;
        }

        return $"{size:0.#} {units[unitIndex]}";
    }
}
