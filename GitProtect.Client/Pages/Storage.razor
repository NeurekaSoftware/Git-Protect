@page "/storage"
@rendermode InteractiveWebAssembly
@inject ApiClient Api

<PageTitle>Storage</PageTitle>

<div class="space-y-6">
    <Card>
        <CardHeader>
            <div>
                <CardTitle>Storage Overview</CardTitle>
                <CardDescription>S3 capacity, usage, and retention management.</CardDescription>
            </div>
            <div class="flex gap-2">
                @if (retentionPolicy?.IsEnabled == true)
                {
                    <Button @onclick="PruneAsync" Disabled="@isPruneBusy">Prune</Button>
                }
                <Button Variant="ButtonVariant.Secondary" @onclick="LoadAsync" Disabled="@isLoading">Refresh</Button>
            </div>
        </CardHeader>
    </Card>

    @if (!string.IsNullOrWhiteSpace(pruneError))
    {
        <Badge Variant="BadgeVariant.Destructive">@pruneError</Badge>
    }
    else if (!string.IsNullOrWhiteSpace(pruneMessage))
    {
        <Badge>@pruneMessage</Badge>
    }

    @if (isLoading)
    {
        <Card><CardContent class="py-6 text-sm text-muted-foreground">Loading storage...</CardContent></Card>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <Card><CardContent class="py-6"><Badge Variant="BadgeVariant.Destructive">@error</Badge></CardContent></Card>
    }
    else if (storage?.Config is null)
    {
        <Card><CardContent class="py-6 text-sm text-muted-foreground">Storage is not configured. Go to Settings.</CardContent></Card>
    }
    else
    {
        var config = storage.Config;
        <div class="grid gap-4 md:grid-cols-3">
            <Card>
                <CardHeader><CardTitle>Bucket</CardTitle></CardHeader>
                <CardContent>
                    <div class="text-base font-medium">@config.Bucket</div>
                    <div class="text-sm text-muted-foreground">@config.Region</div>
                </CardContent>
            </Card>
            <Card>
                <CardHeader><CardTitle>Used Space</CardTitle></CardHeader>
                <CardContent><p class="text-2xl font-semibold">@FormatBytes(storage.TotalBytes)</p></CardContent>
            </Card>
            <Card>
                <CardHeader><CardTitle>Last Verification</CardTitle></CardHeader>
                <CardContent><p>@(config.VerifiedAt?.ToLocalTime().ToString("g") ?? "Never")</p></CardContent>
            </Card>
        </div>
    }
</div>

@code {
    private StorageDetailsDto? storage;
    private RetentionPolicyDto? retentionPolicy;
    private bool isLoading = true;
    private bool isPruneBusy;
    private string? error;
    private string? pruneMessage;
    private string? pruneError;

    protected override async Task OnInitializedAsync() => await LoadAsync();

    private async Task LoadAsync()
    {
        error = null;
        pruneError = null;
        isLoading = true;
        try
        {
            storage = await Api.GetStorageAsync();
            retentionPolicy = await Api.GetRetentionPolicyAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task PruneAsync()
    {
        pruneMessage = null;
        pruneError = null;
        isPruneBusy = true;
        try
        {
            var result = await Api.PruneRetentionAsync();
            if (result.Success && result.Data is not null)
            {
                var localCutoff = result.Data.CutoffUtc.ToLocalTime();
                pruneMessage = $"Pruned {result.Data.DeletedCount} backup object(s) older than {localCutoff:g}.";
                await LoadAsync();
            }
            else
            {
                pruneError = result.Error ?? "Retention prune failed.";
            }
        }
        catch (Exception ex)
        {
            pruneError = ex.Message;
        }
        finally
        {
            isPruneBusy = false;
        }
    }

    private static string FormatBytes(long bytes)
    {
        double size = bytes;
        string[] units = ["B", "KB", "MB", "GB", "TB"];
        var unitIndex = 0;
        while (size >= 1024 && unitIndex < units.Length - 1)
        {
            size /= 1024;
            unitIndex++;
        }

        return $"{size:0.#} {units[unitIndex]}";
    }
}
