@page "/storage"
@rendermode InteractiveWebAssembly
@inject ApiClient Api

<PageTitle>Storage</PageTitle>

<Card>
    <CardHeader>
        <CardTitle>Storage</CardTitle>
        <CardDescription>S3 capacity, usage, and last verification.</CardDescription>
    </CardHeader>
    <CardContent>
        <div>
            @if (retentionPolicy?.IsEnabled == true)
            {
                <Button @onclick="PruneAsync" Disabled="@isPruneBusy">Prune</Button>
            }
            <Button Variant="ButtonVariant.Secondary" @onclick="LoadAsync" Disabled="@isLoading">Refresh</Button>
        </div>
    </CardContent>
</Card>

<Separator />

@if (!string.IsNullOrWhiteSpace(pruneError))
{
    <Badge Variant="BadgeVariant.Destructive">@pruneError</Badge>
}
else if (!string.IsNullOrWhiteSpace(pruneMessage))
{
    <Badge>@pruneMessage</Badge>
}

@if (isLoading)
{
    <Card><CardContent>Loading storage...</CardContent></Card>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <Card><CardContent>@error</CardContent></Card>
}
else if (storage?.Config is null)
{
    <Card><CardContent>Storage is not configured. Go to <a href="/settings">Settings</a>.</CardContent></Card>
}
else
{
    var config = storage.Config;
    <div>
        <Card><CardHeader><CardTitle>Bucket</CardTitle></CardHeader><CardContent>@config.Bucket (@config.Region)</CardContent></Card>
        <Card><CardHeader><CardTitle>Used</CardTitle></CardHeader><CardContent>@FormatBytes(storage.TotalBytes)</CardContent></Card>
        <Card><CardHeader><CardTitle>Last Verify</CardTitle></CardHeader><CardContent>@(config.VerifiedAt?.ToLocalTime().ToString("g") ?? "Never")</CardContent></Card>
    </div>
}

@code {
    private StorageDetailsDto? storage;
    private RetentionPolicyDto? retentionPolicy;
    private bool isLoading = true;
    private bool isPruneBusy;
    private string? error;
    private string? pruneMessage;
    private string? pruneError;

    protected override async Task OnInitializedAsync() => await LoadAsync();

    private async Task LoadAsync()
    {
        error = null;
        pruneError = null;
        isLoading = true;
        try
        {
            storage = await Api.GetStorageAsync();
            retentionPolicy = await Api.GetRetentionPolicyAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task PruneAsync()
    {
        pruneMessage = null;
        pruneError = null;
        isPruneBusy = true;
        try
        {
            var result = await Api.PruneRetentionAsync();
            if (result.Success && result.Data is not null)
            {
                var localCutoff = result.Data.CutoffUtc.ToLocalTime();
                pruneMessage = $"Pruned {result.Data.DeletedCount} backup object(s) older than {localCutoff:g}.";
                await LoadAsync();
            }
            else
            {
                pruneError = result.Error ?? "Retention prune failed.";
            }
        }
        catch (Exception ex)
        {
            pruneError = ex.Message;
        }
        finally
        {
            isPruneBusy = false;
        }
    }

    private static string FormatBytes(long bytes)
    {
        double size = bytes;
        string[] units = ["B", "KB", "MB", "GB", "TB"];
        var unitIndex = 0;
        while (size >= 1024 && unitIndex < units.Length - 1)
        {
            size /= 1024;
            unitIndex++;
        }

        return $"{size:0.#} {units[unitIndex]}";
    }
}
