@page "/tasks"
@rendermode InteractiveWebAssembly
@implements IAsyncDisposable
@inject ApiClient Api

<PageTitle>Tasks</PageTitle>

<MudStack Spacing="3">
    <MudPaper Elevation="1" Class="pa-4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Spacing="2">
            <MudStack Spacing="0">
                <MudText Typo="Typo.h4">Task Activity</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">Current and recent provider backup jobs.</MudText>
            </MudStack>

            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Refresh"
                       OnClick='() => LoadAsync(showLoading: true)'
                       Disabled="@isLoading">
                Refresh
            </MudButton>
        </MudStack>
    </MudPaper>

    @if (isLoading)
    {
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">Loading tasks...</MudAlert>
    }
    else if (!string.IsNullOrWhiteSpace(error))
    {
        <MudAlert Severity="Severity.Error" Variant="Variant.Outlined">@error</MudAlert>
    }
    else if (tasks.Count == 0)
    {
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">No tasks yet.</MudAlert>
    }
    else
    {
        <MudPaper Elevation="1" Class="pa-2">
            <MudTable Items="tasks" Dense="true" Hover="true" Bordered="true">
                <HeaderContent>
                    <MudTh>Task</MudTh>
                    <MudTh>Status</MudTh>
                    <MudTh>Trigger</MudTh>
                    <MudTh>Progress</MudTh>
                    <MudTh>Started</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Task">@context.Name</MudTd>
                    <MudTd DataLabel="Status">
                        @if (context.Status == BackupTaskStatus.Failed)
                        {
                            <MudStack Spacing="1">
                                <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small">Failed</MudChip>
                                <MudText Typo="Typo.caption">@(string.IsNullOrWhiteSpace(context.Message) ? "No details" : context.Message)</MudText>
                            </MudStack>
                        }
                        else
                        {
                            <MudChip T="string" Color="@GetTaskStatusColor(context.Status)" Variant="Variant.Filled" Size="Size.Small">@GetTaskStatusLabel(context.Status)</MudChip>
                        }
                    </MudTd>
                    <MudTd DataLabel="Trigger">
                        <MudChip T="string" Color="@GetTriggerColor(context.Trigger)" Variant="Variant.Outlined" Size="Size.Small">@GetTriggerLabel(context.Trigger)</MudChip>
                    </MudTd>
                    <MudTd DataLabel="Progress">@context.Progress%</MudTd>
                    <MudTd DataLabel="Started">@(context.StartedAt?.ToLocalTime().ToString("g") ?? "-")</MudTd>
                </RowTemplate>
            </MudTable>
        </MudPaper>
    }
</MudStack>

@code {
    private List<BackupTaskDto> tasks = new();
    private bool isLoading = true;
    private string? error;
    private bool isRefreshing;
    private CancellationTokenSource? refreshCts;
    private PeriodicTimer? refreshTimer;
    private readonly TimeSpan refreshInterval = TimeSpan.FromSeconds(5);

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync(showLoading: true);
        StartAutoRefresh();
    }

    private void StartAutoRefresh()
    {
        refreshCts = new CancellationTokenSource();
        refreshTimer = new PeriodicTimer(refreshInterval);
        _ = RefreshLoopAsync(refreshCts.Token);
    }

    private async Task RefreshLoopAsync(CancellationToken cancellationToken)
    {
        if (refreshTimer is null)
        {
            return;
        }

        try
        {
            while (await refreshTimer.WaitForNextTickAsync(cancellationToken))
            {
                await LoadAsync(showLoading: false, cancellationToken);
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (OperationCanceledException)
        {
        }
    }

    private async Task LoadAsync(bool showLoading, CancellationToken cancellationToken = default)
    {
        if (isRefreshing)
        {
            return;
        }

        isRefreshing = true;
        if (showLoading)
        {
            error = null;
            isLoading = true;
        }

        try
        {
            tasks = await Api.GetTasksAsync(limit: 200, cancellationToken);
            error = null;
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            if (showLoading)
            {
                isLoading = false;
            }

            isRefreshing = false;
        }
    }

    private static string GetTaskStatusLabel(BackupTaskStatus status) => status switch
    {
        BackupTaskStatus.Success => "Completed",
        BackupTaskStatus.Running => "Running",
        BackupTaskStatus.Failed => "Failed",
        _ => "Pending"
    };

    private static Color GetTaskStatusColor(BackupTaskStatus status) => status switch
    {
        BackupTaskStatus.Success => Color.Success,
        BackupTaskStatus.Running => Color.Info,
        BackupTaskStatus.Failed => Color.Error,
        _ => Color.Default
    };

    private static string GetTriggerLabel(BackupTaskTrigger trigger) => trigger switch
    {
        BackupTaskTrigger.Scheduled => "Scheduled",
        _ => "Manual"
    };

    private static Color GetTriggerColor(BackupTaskTrigger trigger) => trigger switch
    {
        BackupTaskTrigger.Scheduled => Color.Info,
        _ => Color.Default
    };

    public ValueTask DisposeAsync()
    {
        refreshCts?.Cancel();
        refreshTimer?.Dispose();
        refreshCts?.Dispose();
        return ValueTask.CompletedTask;
    }
}
