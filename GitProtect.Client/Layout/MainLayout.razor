@inherits LayoutComponentBase

<Card>
    <CardHeader>
        <CardTitle>GitProtect</CardTitle>
        <CardDescription>Backup Operations Console</CardDescription>
    </CardHeader>
    <CardContent>
        <div>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/")'>Dashboard</Button>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/backups")'>Backups</Button>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/storage")'>Storage</Button>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/tasks")'>Tasks</Button>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/settings")'>Settings</Button>
            <Button Variant="ButtonVariant.Ghost" @onclick='() => Nav.NavigateTo("/setup")'>Setup</Button>
        </div>
    </CardContent>
</Card>

<Separator />

@Body

@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;
}
